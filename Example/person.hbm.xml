<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Example"
                   namespace="Example">

  <class name="Person" table="[person]" lazy="true">

    <id name="Id" column="id" type ="int" >
      <generator class="identity" />
    </id>

    <property name="FirstName" column="first_name"  type ="string" />
    <property name="Age" column="age" type ="int"  />
    <property name="LastName" column="last_name" type ="string"/>

    <many-to-one name="City" column="city_id"
    class="City" fetch="join" />

    <one-to-one name="Extra" class ="AdditionalInformation" cascade="all" />
   
    <bag name="Automobiles" table="automobile" cascade="all-delete-orphan" inverse="true" lazy="false">
      <key>
        <column name="person_id"/>
      </key>
      <one-to-many class="Automobile" />
    </bag>


    <bag name="Certificates" table="person_certificate"   lazy="false" >
      <key column="person_id" />
      <many-to-many class="Certificate" column="certificate_id"
      not-found="exception"
       />
    </bag>

  </class>
</hibernate-mapping>