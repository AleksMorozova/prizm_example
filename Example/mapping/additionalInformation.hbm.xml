<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Example"
                   namespace="Example.Entities">

  <class name="AdditionalInformation" table="[additional_information]" lazy="true">

    <id name="Id" column="id" type ="int" >
      <generator class="identity" />
    </id>

    <property name="DateOfBirth" column="date_of_birth"  />
    <property name="PlaceOfBirth" column="place_of_birth" />
    <property name="Person_id" column="person_id"/>

  </class>
</hibernate-mapping>
